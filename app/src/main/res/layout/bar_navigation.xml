<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="680dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/image_button_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            app:srcCompat="@drawable/ic_movies" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/image_button_series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            app:srcCompat="@drawable/ic_series" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/image_button_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            app:srcCompat="@drawable/ic_favorites" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            app:srcCompat="@drawable/ic_search" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            app:srcCompat="@drawable/ic_my_account" />

    </LinearLayout>


</LinearLayout>